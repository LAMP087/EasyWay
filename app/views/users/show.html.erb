<p id="notice"><%= notice %></p>

<p>
  <b>Username:</b>
  <%= @user.username %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Password hash:</b>
  <%= @user.password_hash %>
</p>

<p>
  <b>Password salt:</b>
  <%= @user.password_salt %>
</p>

<p>
  <b>Roleid:</b>
    <td>
      <% @roles.each do |role| %>
        <li>
          <%= check_box_tag 'role_ids[]', role.id -%>
          <%= h role.name -%>
        </li>
      <% end %>
    </td>
  <%= @user.roleid %>
</p>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
