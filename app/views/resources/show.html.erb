<p id="notice"><%= notice %></p>

<p>
  <b>Description:</b>
  <%= @resource.description %>
</p>

<p>
  <b>Resource type:</b>
  <%= @resource.resource_type_id %>
</p>

<p>
  <b>Resource type name:</b>
  <%= @resource_type.name %>
</p>
<% @field_types.each_with_index do |field_type, i| %>
  <p><b><%= field_type.name %></b>

   <% if @values[i].value %><%= @values[i].value %><% end %>
   <% if @values[i].resource_reference_id %><%= @values[i].resource_reference_id %><% end %>
  </p>
<% end %>

<%= link_to 'Edit', edit_resource_path(@resource) %> |
<%= link_to 'Back', resources_path %>