<tbody>
 <tr>
 	<th>Id</th>
    <th>Description</th>
    <th>Resource type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @resources.each do |resource| %>
  <% if can?(:read, resource) %>
    <tr>
    	<td><%= resource.id %></td>
      <td><%= resource.description %></td>
      <td><%= ResourceType.find(resource.resource_type_id).name %></td>
      <td><%= link_to 'Show', resource,:class=>"btn btn-info" %></td>
      <td>
        <% if can?(:edit, resource) %>
          <%= link_to 'Edit', edit_resource_path(resource),:class=>"btn btn-success" %>
        <% end %>
      </td>
      <td>
        <% if can?(:delete, resource) %>
          <%= link_to "Destroy", resource, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger" %>
          <% end %>
      </td>
    </tr>
  <% end %>
<% end %>
</tbody>

<script src="/js/resource_info.js"></script>