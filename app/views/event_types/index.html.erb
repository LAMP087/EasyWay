<div class="boxforforms">
<h3 align="center">Listing event_types</h3>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @event_types.each do |event_type| %>
  <tr>
    <td><%= event_type.name %></td>
    <td><%= link_to 'Show', event_type, :class=>"btn btn-info" %></td>
    <td><%= link_to 'Edit', edit_event_type_path(event_type), :class=>"btn btn-success" %></td>
    <td><%= link_to 'Destroy', event_type, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Event type', new_event_type_path, :class=>"btn btn-primary controls" %>
</div>
