<h1>Listing validators</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Field type</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @validators.each do |validator| %>
  <tr>
    <td><%= validator.name %></td>
    <td><%= validator.field_type_id %></td>
    <td><%= validator.body %></td>
    <td><%= link_to 'Show', validator %></td>
    <td><%= link_to 'Edit', edit_validator_path(validator) %></td>
    <td><%= link_to 'Destroy', validator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

