<%= form_for @validator, :html => { :class => "form-horizontal" } do |f| %>
  <% if @validator.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@validator.errors.count, "error") %> prohibited this validator from being saved:</h2>

      <ul>
      <% @validator.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :field_type_id %><br />
    <%= f.number_field :field_type_id %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body, rows: 3 %>
  </div>
  <div class="field">
    <%= f.label :message %><br />
    <%= f.text_field :message %>
  </div>
  <div class="actions">
    <%= f.submit  params[:action] == 'new' ? "Create" : ("Update") + " validator", :class=>"btn btn-primary" %>
  </div>
<% end %>
