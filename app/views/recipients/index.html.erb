<div class="boxforforms">
<h3>Listing recipients</h3>

<table>
  <tr>
    <th>Notifyevent</th>
    <th>User</th>
    <th>Group number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recipients.each do |recipient| %>
  <tr>
    <td><%= recipient.notify_event_id %></td>
    <td><%= recipient.user_id %></td>
    <td><%= recipient.group_number %></td>
    <td><%= link_to 'Show', recipient, :class => "btn btn-info" %></td>
    <td><%= link_to 'Edit', edit_recipient_path(recipient), :class => "btn btn-info" %></td>
    <td><%= link_to 'Destroy', recipient, confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Recipient', new_recipient_path, :class => "btn btn-primary" %>
</div>
